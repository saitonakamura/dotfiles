[difftool]
  prompt = false

[diff]
  tool = nvimdiff

[merge]
  tool = nvimmerge

[difftool "nvimdiff"]
  cmd = "nvim -d \"$LOCAL\" \"$REMOTE\""

[mergetool]
  keepBackup = false

[mergetool "nvimmerge"]
  cmd = "nvim -f -c \"Gdiffsplit!\" \"$MERGED\""

[pull]
  rebase = false
  ff = only

[init]
	defaultBranch = main

