  signingkey = ssh-ed25519 AAAAC3NzaC1lZDI1NTE5AAAAIBgN+8itmPjt40+Vw9tx3kQKH7aUny46xVPiKPEzh+xs

[core]
  editor = nvim

[difftool]
  prompt = false

[diff]
  tool = nvimdiff

[merge]
  tool = nvimmerge

[difftool "nvimdiff"]
  cmd = "nvim -d \"$LOCAL\" \"$REMOTE\""

[mergetool]
  keepBackup = false

[mergetool "nvimmerge"]
  cmd = "nvim -f -c \"Gdiffsplit!\" \"$MERGED\""

[pull]
  rebase = false
  ff = only

[init]
	defaultBranch = main

[gpg]
  format = ssh

[gpg "ssh"]
	allowedSignersFile = "~/.ssh/allowed_signers"