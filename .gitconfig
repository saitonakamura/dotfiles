[core]
  editor = nvim

[difftool]
  prompt = false

[diff]
  tool = nvimdiff

[merge]
  tool = nvimmerge
  keepBackup = false

[difftool "nvimdiff"]
  cmd = "nvim -d \"$LOCAL\" \"$REMOTE\""

[mergetool "nvimmerge"]
  cmd = "nvim -f -c \"Gdiffsplit!\" \"$MERGED\""

[pull]
  rebase = false
  ff = only
